# Corporate Network Configuration
server.port=8080

# Disable XML validation - CRITICAL for corporate networks
spring.xml.ignore-dtd=true
spring.xml.ignore-schema-location=true
spring.xml.ignore-validation=true
javax.xml.accessExternalDTD=""
javax.xml.accessExternalSchema=""

# Spring Integration settings
spring.integration.xml.validate-schema=false
spring.integration.readOnly.headers=false
spring.main.allow-bean-definition-overriding=true

# Enhanced XML processing
spring.beans.xml.ignore-validation-mode=true

# Logging - reduce XML noise
logging.level.org.springframework.beans.factory.xml=ERROR
logging.level.org.xml.sax=ERROR
logging.level.javax.xml=ERROR
logging.level.org.springframework.integration=INFO
logging.level.com.ads.apiseng=DEBUG

# Disable health check features that might cause network calls
management.endpoints.web.exposure.include=health