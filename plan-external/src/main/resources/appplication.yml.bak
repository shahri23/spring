spring:
  main:
    allow-bean-definition-overriding: true
  
  # CRITICAL: Disable all XML validation for corporate networks
  xml:
    ignore-dtd: true
    ignore-schema-location: true
    ignore-validation: true
    
  # Enhanced XML processing settings
  beans:
    xml:
      ignore-validation-mode: true
  
  integration:
    xml:
      validate-schema: false
    readOnly:
      headers: false

server:
  port: 8080

# Disable unnecessary features that might cause network issues
management:
  endpoints:
    web:
      exposure:
        include: health
        
# Logging - reduce XML validation noise
logging:
  level:
    org.springframework.beans.factory.xml: ERROR
    org.xml.sax: ERROR
    javax.xml: ERROR
    org.springframework.integration: INFO
    com.ads.apiseng: DEBUG