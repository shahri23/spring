<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:int="http://www.springframework.org/schema/integration"
       xmlns:int-http="http://www.springframework.org/schema/integration/http"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:task="http://www.springframework.org/schema/task"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           https://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/integration
           https://www.springframework.org/schema/integration/spring-integration.xsd
           http://www.springframework.org/schema/integration/http
           https://www.springframework.org/schema/integration/http/spring-integration-http.xsd
           http://www.springframework.org/schema/task
           https://www.springframework.org/schema/task/spring-task.xsd">

    <!-- ========================================================= -->
    <!-- PART 1: BASIC ENRICH / VALIDATE / TRANSFORM PIPELINE -->
    <!-- ========================================================= -->
    <int:channel id="inputChannel"/>
    <int:channel id="validationChannel"/>
    <int:channel id="transformationChannel"/>
    <int:channel id="invalidMessageChannel"/>
    <int:publish-subscribe-channel id="processedChannel"/>

    <int:enricher input-channel="inputChannel"
                  output-channel="validationChannel">
        <int:header name="enrichedTimestamp" expression="T(System).currentTimeMillis()"/>
        <int:header name="correlationId" expression="T(java.util.UUID).randomUUID().toString()"/>
        <int:header name="source" expression="'EIP-MERGED-DEMO'"/>
        <int:header name="stage" expression="'ENRICHED'"/>
    </int:enricher>

    <int:filter input-channel="validationChannel"
                output-channel="transformationChannel"
                discard-channel="invalidMessageChannel"
                expression="payload != null and payload.toString().trim().length() > 0"/>

    <int:transformer input-channel="transformationChannel"
                     output-channel="processedChannel"
                     expression="'[BASIC-PROCESSOR] received: ' + payload.toString().toUpperCase()"/>

    <int:logging-channel-adapter channel="processedChannel"
                                 level="INFO"
                                 expression="payload"/>

    <int:logging-channel-adapter channel="invalidMessageChannel"
                                 level="ERROR"
                                 log-full-message="true"/>

    <int-http:inbound-gateway id="basicHttpEndpoint"
                              supported-methods="POST"
                              request-channel="inputChannel"
                              reply-channel="processedChannel"
                              path="/api/basic-transform"/>

    <!-- ========================================================= -->
    <!-- PART 2: ROUTING / PUB-SUB PATTERNS -->
    <!-- ========================================================= -->

    <!-- ROUTING CHANNELS -->
    <int:channel id="routingInputChannel"/>
    <int:channel id="jsonRoutingChannel"/>
    <int:channel id="xmlRoutingChannel"/>
    <int:channel id="csvRoutingChannel"/>
    <int:channel id="defaultRoutingChannel"/>
    <int:channel id="csvItemChannel"/>
    <int:channel id="csvStringChannel"/>
    <int:channel id="defaultStringChannel"/>
    <int:channel id="csvAggregationChannel"/>
    <int:channel id="csvReplyChannel"/>

    <!-- PUB/SUB CHANNELS (NO REPLY) -->
    <int:publish-subscribe-channel id="orderEventChannel" task-executor="routingAsyncExecutor"/>
    <int:publish-subscribe-channel id="inventoryEventChannel" task-executor="routingAsyncExecutor"/>

    <!-- MESSAGE STORE FOR AGGREGATION -->
    <bean id="csvMessageStore" class="org.springframework.integration.store.SimpleMessageStore"/>

    <!-- ASYNC EXECUTOR -->
    <bean id="routingAsyncExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
        <property name="corePoolSize" value="2"/>
        <property name="maxPoolSize" value="5"/>
        <property name="queueCapacity" value="25"/>
        <property name="threadNamePrefix" value="EIP-Router-"/>
    </bean>

    <!-- CONTENT-BASED ROUTER -->
    <int:router id="contentBasedRouter"
                input-channel="routingInputChannel"
                expression="payload.toString().trim().startsWith('{') ? 'jsonRoutingChannel' :
                           (payload.toString().trim().startsWith('&lt;') ? 'xmlRoutingChannel' :
                           (payload.toString().contains(',') ? 'csvRoutingChannel' : 'defaultRoutingChannel'))"/>

    <!-- JSON / XML transformers -->
    <int:transformer input-channel="jsonRoutingChannel"
                     output-channel="orderEventChannel"
                     expression="new java.lang.String(payload, 'UTF-8')"/>

    <int:transformer input-channel="xmlRoutingChannel"
                     output-channel="inventoryEventChannel"
                     expression="new java.lang.String(payload, 'UTF-8')"/>

    <!-- CSV PROCESSING WITH AGGREGATION -->
    <int:transformer input-channel="csvRoutingChannel"
                     output-channel="csvStringChannel"
                     expression="payload instanceof T(java.lang.String) ? payload : new java.lang.String(payload, 'UTF-8')"/>

    <!-- SPLITTER: Split CSV into individual items -->
    <int:splitter input-channel="csvStringChannel"
                  output-channel="csvItemChannel"
                  expression="payload.toString().split(',')"
                  apply-sequence="true"/>

    <!-- TRANSFORM AND SEND TO PUB/SUB CHANNEL -->
    <int:transformer input-channel="csvItemChannel"
                     output-channel="csvPubSubChannel"
                     expression="'ITEM: ' + payload.toString().trim()"/>

    <!-- PUB/SUB CHANNEL FOR CSV ITEMS -->
    <int:publish-subscribe-channel id="csvPubSubChannel"/>

    <!-- LOG EACH CSV ITEM (SUBSCRIBER 1) -->
    <int:logging-channel-adapter channel="csvPubSubChannel"
                                 level="INFO"
                                 expression="'[CSV-ITEM-PROCESSOR] received: ' + payload"/>

    <!-- INVENTORY SERVICE (SUBSCRIBER 2) -->
    <int:logging-channel-adapter channel="csvPubSubChannel"
                                 level="INFO"
                                 expression="'[INVENTORY-SERVICE] received: ' + payload"/>

    <!-- WAREHOUSE SERVICE (SUBSCRIBER 3) -->
    <int:logging-channel-adapter channel="csvPubSubChannel"
                                 level="INFO"
                                 expression="'[WAREHOUSE-SERVICE] received: ' + payload"/>

    <!-- AUDIT SERVICE (SUBSCRIBER 4) -->
    <int:logging-channel-adapter channel="csvPubSubChannel"
                                 level="INFO"
                                 expression="'[AUDIT-SERVICE] received: ' + payload"/>

    <!-- AGGREGATOR (SUBSCRIBER 5) - Collects for reply -->
    <int:service-activator input-channel="csvPubSubChannel"
                           output-channel="csvAggregationChannel"
                           expression="payload"/>

    <!-- AGGREGATOR: Collect all CSV items back together -->
    <int:aggregator input-channel="csvAggregationChannel"
                    output-channel="csvReplyChannel"
                    correlation-strategy-expression="headers.correlationId"
                    release-strategy-expression="size() == messages[0].headers.sequenceSize"
                    message-store="csvMessageStore"
                    send-timeout="5000"
                    expire-groups-upon-completion="true"/>

    <!-- FORMAT AGGREGATED RESPONSE -->
    <int:transformer input-channel="csvReplyChannel"
                     output-channel="batchFinalReplyChannel"
                     expression="'Batch processed ' + payload.size() + ' items: ' + payload.toString()"/>

    <int:channel id="batchFinalReplyChannel"/>

    <!-- ORDER EVENT SUBSCRIBERS (NO REPLY) -->
    <int:logging-channel-adapter channel="orderEventChannel"
                                 level="INFO"
                                 expression="'[ORDER-SERVICE] received: ' + payload"/>
    <int:logging-channel-adapter channel="orderEventChannel"
                                 level="INFO"
                                 expression="'[AUDIT-SERVICE] received: ' + payload"/>
    <int:logging-channel-adapter channel="orderEventChannel"
                                 level="INFO"
                                 expression="'[EMAIL-SERVICE] received: ' + payload"/>
    <int:logging-channel-adapter channel="orderEventChannel"
                                 level="INFO"
                                 expression="'[ANALYTICS-SERVICE] received: ' + payload"/>
    
    <!-- ORDER REPLY (SINGLE REPLY FROM PUB/SUB) -->
    <int:transformer input-channel="orderEventChannel"
                     output-channel="orderReplyChannel"
                     expression="'Order processed: ' + payload"/>
    <int:channel id="orderReplyChannel"/>

    <!-- INVENTORY EVENT SUBSCRIBERS (NO REPLY) -->
    <int:logging-channel-adapter channel="inventoryEventChannel"
                                 level="INFO"
                                 expression="'[INVENTORY-SERVICE] received: ' + payload"/>
    <int:logging-channel-adapter channel="inventoryEventChannel"
                                 level="INFO"
                                 expression="'[WAREHOUSE-SERVICE] received: ' + payload"/>
    <int:logging-channel-adapter channel="inventoryEventChannel"
                                 level="INFO"
                                 expression="'[AUDIT-SERVICE] received: ' + payload"/>
    
    <!-- INVENTORY REPLY (SINGLE REPLY FROM PUB/SUB) -->
    <int:transformer input-channel="inventoryEventChannel"
                     output-channel="inventoryReplyChannel"
                     expression="'Inventory processed: ' + payload"/>
    <int:channel id="inventoryReplyChannel"/>

    <!-- DEFAULT HANDLER -->
    <int:transformer input-channel="defaultRoutingChannel"
                     output-channel="defaultStringChannel"
                     expression="new java.lang.String(payload, 'UTF-8')"/>
    <int:logging-channel-adapter channel="defaultStringChannel"
                                 level="INFO"
                                 expression="'[DEFAULT-HANDLER] received: ' + payload"/>

    <!-- HTTP ENDPOINTS -->
    <int-http:inbound-gateway id="orderHttpEndpoint"
                              supported-methods="POST"
                              request-channel="jsonRoutingChannel"
                              reply-channel="orderReplyChannel"
                              path="/api/orders"
                              reply-timeout="5000"/>

    <int-http:inbound-gateway id="inventoryHttpEndpoint"
                              supported-methods="POST"
                              request-channel="xmlRoutingChannel"
                              reply-channel="inventoryReplyChannel"
                              path="/api/inventory"
                              reply-timeout="5000"/>

    <!-- BATCH ENDPOINT WITH AGGREGATED REPLY -->
    <int-http:inbound-gateway id="batchHttpEndpoint"
                              supported-methods="POST"
                              request-channel="csvRoutingChannel"
                              reply-channel="batchFinalReplyChannel"
                              path="/api/batch"
                              reply-timeout="10000"/>
</beans>